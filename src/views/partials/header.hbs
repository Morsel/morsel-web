<header class="main-header" ng-class="{'mini-header': viewOptions.miniHeader, 'full-header': !viewOptions.miniHeader, 'full-width-header': viewOptions.fullWidthHeader}">
  <div class="container">
    <h1 class="morsel-logo" ng-class="{'hide-logo':viewOptions.hideLogo}">
      {{#if pageType.public}}
      <a href="/">Morsel</a>
      {{else}}
      <a href="/" target="_self">Morsel</a>
      {{/if}}
    </h1>
  </div>
  <a ng-click="menuOpen = !menuOpen" class="side-nav-trigger"></a>
</header>