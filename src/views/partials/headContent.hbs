  var MorselConfig = {
    version: '<%= version %>',
    apiUrl: '{{apiUrl}}'
    {{#if facebookAppId}}
    ,facebookAppId: '{{{facebookAppId}}}'
    {{/if}}
    {{#if twitterData}}
    ,twitterData: {{{twitterData}}}
    {{/if}}
  };
