<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
<base href="{{metabase}}">
<meta name="fragment" content="!">
<link rel="shortcut icon" href="<%= favicon_dir %>/favicon.ico" type="image/x-icon">
{{#if showAppBanner}}
{{#if metadata.app.url}}
<meta name="apple-itunes-app" content="app-id={{appId}}, app-argument={{metadata.app.url}}">
{{else}}
<meta name="apple-itunes-app" content="app-id={{appId}}">
{{/if}}
{{/if}}
<link rel="apple-touch-icon" href="<%= favicon_dir %>/apple-touch-icon.png">
<link rel="apple-touch-icon" sizes="57x57" href="<%= favicon_dir %>/apple-touch-icon-57x57.png" />
<link rel="apple-touch-icon" sizes="72x72" href="<%= favicon_dir %>/apple-touch-icon-72x72.png" />
<link rel="apple-touch-icon" sizes="114x114" href="<%= favicon_dir %>/apple-touch-icon-114x114.png" />
<link rel="apple-touch-icon" sizes="144x144" href="<%= favicon_dir %>/apple-touch-icon-144x144.png" />
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="mobile-web-app-capable" content="yes">

<title ng-bind="pageData.pageTitle">{{metadata.title}}</title>
<meta name="description" content="{{metadata.description}}">

<!-- social media tags -->
<meta name="twitter:card" content="{{metadata.twitter.card}}">
<meta name="twitter:site" content="{{metadata.twitter.site}}">
<meta name="twitter:title" content="{{metadata.title}}">
<meta name="twitter:description" content="{{metadata.description}}">
<meta name="twitter:creator" content="{{metadata.twitter.creator}}">
{{#if metadata.twitter.image}}
<meta name="twitter:image:src" content="{{metadata.twitter.image}}">
{{else}}
<meta name="twitter:image:src" content="{{metadata.image}}">
{{/if}}
<meta name="twitter:url" content="{{metadata.url}}">
<meta name="twitter:app:country" content="{{metadata.twitter.app.country}}">
<meta name="twitter:app:name:iphone" content="{{metadata.twitter.app.iphone.name}}">
<meta name="twitter:app:id:iphone" content="{{metadata.twitter.app.iphone.id}}">
{{#if metadata.app.url}}
<meta name="twitter:app:url:iphone" content="{{metadata.app.url}}"/>
{{/if}}

<meta property="og:locale" content="{{metadata.og.locale}}"/>
<meta property="og:title" content="{{metadata.title}}">
<meta property="og:type" content="{{metadata.og.type}}">
<meta property="og:url" content="{{metadata.url}}">
{{#if metadata.og.image}}
<meta property="og:image" content="{{metadata.og.image}}">
{{else}}
<meta property="og:image" content="{{metadata.image}}">
{{/if}}
<meta property="og:description" content="{{metadata.description}}">
<meta property="og:site_name" content="{{metadata.og.site_name}}">
<meta property="fb:app_id" content="{{metadata.fb_app_id}}">
{{#metadata.og.is_article}}
{{#metadata.og.author}}
<meta property="article:author" content="{{metadata.og.author}}">
{{/metadata.og.author}}
<meta property="article:publisher" content="{{metadata.og.article_publisher}}">
<meta property="article:published_time" content="{{metadata.og.article_published_at}}">
<meta property="article:modified_time" content="{{metadata.og.article_modified_at}}">
{{/metadata.og.is_article}}

{{#if metadata.app.url}}
<meta property="al:ios:url" content="{{metadata.app.url}}" />
<meta property="al:ios:app_store_id" content="{{appId}}" />
<meta property="al:ios:app_name" content="Morsel" />
<meta property="al:web:url" content="{{metadata.url}}" />
{{/if}}
<!--end social tags-->

<link rel="canonical" href="{{metadata.url}}">

